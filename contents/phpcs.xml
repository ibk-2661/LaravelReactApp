<?xml version="1.0"?>
<ruleset name="BaseRule">
    <description>Base Coding Rule</description>

    <!-- 対象フォルダ -->
    <file>./app</file>
    <file>./tests</file>

    <!-- PSR2をベースとする -->
    <rule ref="PSR2">
        <!-- 1行の文字数はチェックしない -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <arg name="colors"/>
    <arg value="p"/>
    <arg name="parallel" value="4"/>
</ruleset>
