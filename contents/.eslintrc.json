{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "import",
        "disable"
    ],
    "processor": "disable/disable",
    "overrides": [
        {
            "files": ["resources/ts/**/*.tsx"],
            "settings": {
                // アクセシビリティ系のプラグイン"jsx-a11y"のルールをすべて無効
                // airbnbと依存関係にあるプラグインなのでプラグインごと無効にする
                "disable/plugins": ["jsx-a11y"]
            }
        }
    ],
    "rules": {
        // importの拡張子ない状態を許可
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "tsx": "never"
            }
        ],

        // デフォルトエクスポートを許可しない
        "import/no-default-export": "error",

        // jsx記法をtsxファイルでも許可
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".jsx", ".tsx"]
            }
        ],

        // "no-use-before-define"ルールをts用のルールに置き換え
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],

        // ReactComponentの定義はアロー関数のみ許可
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": "arrow-function",
                "unnamedComponents": "arrow-function"
            }
        ],

        // jsxのタグ内でのスプレッド構文を許可
        "react/jsx-props-no-spreading": [
            "error",
            {
                "html": "ignore",
                "custom": "ignore",
                "exceptions": [""]
            }
        ],

        // prop関連の設定（typescriptだと必要性が低い） @see https://stackoverflow.com/questions/63696724/
        "react/prop-types": "off",
        "react/require-default-props": "off"
    },
    "settings": {
        // tsが解析対象から外れることがあるので追加の設定
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}
